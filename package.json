{
  "name": "YX-JS-ToolKit",
  "version": "1.0.0",
  "discription": "YX-JS-ToolKit is a toolkit for js common functions.",
  "main": "./index.html",
  "scripts": {
    "jest:test": "jest ./test/assets/js --coverage",
    "jest:watch": "jest ./test --watch",
    "jest:coverage:color": "jest ./test --coverage --color"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gyx8899/YX-JS-ToolKit.git"
  },
  "keywords": [
    "Javascript",
    "Web",
    "Sample",
    "Component",
    "Util"
  ],
  "Author": "Steper Kuo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gyx8899/YX-JS-ToolKit/issues"
  },
  "homepage": "https://github.com/gyx8899/YX-JS-ToolKit#readme",
  "babel": {
    "presets": [
      [
        "env",
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "//": "Comment: Below are optional for jest config",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "html",
      "text",
      "json-summary"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^23.0.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-env": "^1.7.0",
    "jest": "^24.8.0",
    "mock-local-storage": "^1.1.8",
    "ts-jest": "^24.0.2",
    "vue-jest": "^3.0.4"
  }
}
